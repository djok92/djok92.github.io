{
  "name": "portfolio-site",
  "version": "1.0.0",
  "description": "My personal portfolio site",
  "main": "app.js",
  "scripts": {
    "watch": "node-sass scss/main.scss css/style.css -w",
    "compile:sass": "node-sass scss/main.scss css/style.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.css -o css/style.css",
    "compress:css": "node-sass css/style.css css/style.css --output-style compressed",
    "compress:img": "node js/compress.js",
    "build": "npm-run-all compile:sass prefix:css compress:css compress:img"
  },
  "author": "Stefan Djokic",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "concat": "^1.0.3",
    "imagemin": "^6.0.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^6.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.3.1"
  }
}
